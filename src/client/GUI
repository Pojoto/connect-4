
local player = game:GetService("Players").LocalPlayer

local intro_frame = script.Parent:WaitForChild("IntroGui").IntroFrame
local intro_menu = intro_frame.IntroMenu
local play_human_button = intro_menu.PlayHuman
local play_ai_button = intro_menu.PlayAI
local play_self_button = intro_menu.PlaySelf
local waiting_text = intro_menu.WaitingText

local game_frame = script.Parent:WaitForChild("GameGui").GameFrame
local timer = game_frame.Timer

local game_over_frame = script.Parent:WaitForChild("GameGui").GameOverFrame
local result_text = game_over_frame.ResultText

local play_human_remote = game:GetService("ReplicatedStorage").PlayHuman
local play_self_remote = game:GetService("ReplicatedStorage").PlaySelf
local game_over_remote = game:GetService("ReplicatedStorage").GameOver

play_human_button.MouseButton1Click:Connect(function()
	play_human_remote:FireServer()
end)

play_self_button.MouseButton1Click:Connect(function()
	play_self_remote:FireServer()
end)
