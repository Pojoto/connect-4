
local start_remote = game:GetService("ReplicatedStorage").Start
local turn_remote = game:GetService("ReplicatedStorage").Turn
local turn_function = game:GetService("ReplicatedStorage").TurnFunction

local progress = false


local function player1(player)
	
	turn_remote:FireClient(player)
	--local column = turn_function:InvokeClient()
	
	repeat wait() until progress
	
	progress = false
	
end


local function game_loop(player)
	
	for i = 0, 42 do
		player1(player)
		print('hi')
	end
	
end


start_remote.OnServerEvent:Connect(function(player)
	--player1(player)
	game_loop(player)
end)

turn_remote.OnServerEvent:Connect(function()
	progress = true
end)